generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Barang {
  id          Int          @id @default(autoincrement())
  nama_barang String
  stok        Int
  jenis_barang String
  Transaksi   Transaksi[]
}

model Transaksi {
  id              Int      @id @default(autoincrement())
  id_barang       Int
  jumlah_terjual  Int
  tanggal_transaksi DateTime
  Barang          Barang   @relation(fields: [id_barang], references: [id])
}